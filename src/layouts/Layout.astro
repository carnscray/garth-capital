---
import "../styles/global.css";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
  image?: string;
  url?: string;
  noindex?: boolean;
}

const {
  title = "Garth Capital",
  description,
  image = "/img/logo/garthcapital_blue_social.png",
  url,
  noindex,
} = Astro.props;

// Forcing a new, cleaned-up URL - no tracking or crap around it
const cleanUrl = Astro.url.origin + Astro.url.pathname;

//If a special URL has been passed through than use it - otherwise use the clean page URL
const finalUrl = url || cleanUrl;

---


<!doctype html>
<html lang="en" class="h-full">
  <head>

  <head>
    
    
    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-RN8VZ1PTST"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-RN8VZ1PTST');
    </script>

    
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- ✅ Optional no bots -->
        {noindex && <meta name="robots" content="noindex, nofollow" />}


    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- ✅ Social share meta -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:url" content={finalUrl} />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:url" content={finalUrl} />


    <!-- ✅ ADD Leaflet CSS here -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css"
    />
    <script
      src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
      defer
    ></script>

    <!-- ✅ ADD font css here -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />


    <!-- ✅ ADD icon library -->
    <script
      src="https://code.iconify.design/iconify-icon/1.0.8/iconify-icon.min.js"
      defer
    ></script>
  </head>

  <body class="flex flex-col min-h-screen overflow-x-clip"> <!--added overflow-x-clip -->
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
