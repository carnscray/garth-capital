---
// This is a minimal, reusable Astro component for a 3-column metric grid.

// Helper map to convert Lucide names to Iconify strings
const IconMap = {
  Systems: 'lucide:cog',
  Structure: 'lucide:layout-panel-top', 
  Brand: 'lucide:megaphone',       
  Leadership: 'lucide:arrow-up-wide-narrow',       
  Capital: 'lucide:landmark',       
  Stewardship: 'lucide:user-star',      
};

// Define the data for the component
const metrics = [
  {
    icon: IconMap.Systems, // Now using the Iconify string 'lucide:rocket'
    value: 'Systems',
    description: 'Automate and standardise key processes to create a robust, repeatable operating system that is prepared for growth.',
  },
  {
    icon: IconMap.Structure, // Now using the Iconify string 'lucide:trending-down'
    value: 'Structure',
    description: 'Provide a consistent framework for internal roles and external engagement that ensures reliability at scale.',
  },
  {
    icon: IconMap.Brand, // Now using the Iconify string 'lucide:piggy-bank'
    value: 'Brand & Marketing',
    description: 'Sharpen and amplify the unique marketing message to attract ideal customers and create the necessary visibility for scalable growth.',
  },
    {
    icon: IconMap.Leadership, // Now using the Iconify string 'lucide:piggy-bank'
    value: 'Leadership',
    description: 'Mentor and supplement talent to maintain the consistent intensity, focus, and execution required for scalable success.',
  },
    {
    icon: IconMap.Capital, // Now using the Iconify string 'lucide:piggy-bank'
    value: 'Capital',
    description: 'Provide the financial backing for strategic upgrades, technology investment, and sustainable expansion.',
  },
    {
    icon: IconMap.Stewardship, // Now using the Iconify string 'lucide:piggy-bank'
    value: 'Stewardship',
    description: 'Handover to highly incentivized leadership dedicated to the long-term health and compounding value of the asset.',
  },
];

// Select the specific 3 metrics requested by the user:
// NOTE: I've updated the metrics array above to only contain the 3 you need,
// so we can use it directly, simplifying the code.
const selectedMetrics = metrics;

// IMPORTANT: This assumes you have the following in your main layout:
// <script src="https://code.iconify.design/iconify-icon/1.0.8/iconify-icon.min.js" defer></script>
---

<section class="py-16 md:py-20 bg-blacklight">
  <div class="container mx-auto px-4 px-8 ">
    
    <div class="max-w-2xl mx-auto text-center mb-8">
        <h2 class="text-3xl font-extrabold tracking-tight text-main md:text-4xl mb-4">
            Our Approach
        </h2>

        <p class="text-lg text-blackmain pb-4">
            Beyond capital, we deliver hands-on expertise in key areas, including:
        </p>
    </div>

    <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 lg:gap-8 px-4">
      {selectedMetrics.map((metric) => (
        <div class="p-8 bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 ease-in-out transform hover:-translate-y-1 text-left">
          
          <div class="w-16 h-16 flex items-center justify-center bg-second text-main rounded-full mb-6 text-4xl">
            <iconify-icon 
              icon={metric.icon} 
            />
          </div>
          
          <p class="text-xl font-bold text-main">
            {metric.value}
          </p>
          
          <p class="mt-1 text-base text-blackmain">
            {metric.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
