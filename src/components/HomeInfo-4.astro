---
// This is a minimal, reusable Astro component for a 3-column metric grid.

// Helper map to convert Lucide names to Iconify strings
const IconMap = {
  Age: 'lucide:clock-4',
  Valuation: 'lucide:circle-dollar-sign', // Perfect for 'EV <$1M'
  Profitability: 'lucide:trending-up',       // Perfect for 'Profit >$0'
  Cashflow: 'lucide:banknote-arrow-up',       // Perfect for 'Profit >$0'
};

// Define the data for the component
const metrics = [
  {
    icon: IconMap.Age, // Now using the Iconify string 'lucide:rocket'
    value: 'Trading',
    description: '3+ years.',
  },
  {
    icon: IconMap.Valuation, // Now using the Iconify string 'lucide:trending-down'
    value: 'Valuation',
    description: 'less than $1M',
  },
  {
    icon: IconMap.Profitability, // Now using the Iconify string 'lucide:piggy-bank'
    value: 'Profitability',
    description: 'more than $0',
  },
    {
    icon: IconMap.Cashflow, // Now using the Iconify string 'lucide:piggy-bank'
    value: 'Cash Flow',
    description: 'Positive, Generative',
  },
];

// Select the specific 3 metrics requested by the user:
// NOTE: I've updated the metrics array above to only contain the 3 you need,
// so we can use it directly, simplifying the code.
const selectedMetrics = metrics;

// IMPORTANT: This assumes you have the following in your main layout:
// <script src="https://code.iconify.design/iconify-icon/1.0.8/iconify-icon.min.js" defer></script>
---

<section class="py-16 md:py-20 bg-blacklight">
  <div class="container mx-auto px-4 px-8 ">
    
    <div class="max-w-2xl mx-auto text-center mb-8">
        <h2 class="text-3xl font-extrabold tracking-tight text-main md:text-4xl mb-4">
            Investment Criteria
        </h2>

        <p class="mt-4 text-lg text-blackmain pb-4">
            We focus on small Australian businesses, secured through a majority equity stake or a staged acquisition process.
        </p>
    </div>

    <div class="grid grid-cols-2 gap-4  lg:grid-cols-4 lg:gap-8">
      {selectedMetrics.map((metric) => (
        <div class="p-8 bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 ease-in-out transform hover:-translate-y-1 text-center">
          
          <div class="mx-auto w-16 h-16 flex items-center justify-center bg-second text-main rounded-full mb-6 text-4xl">
            <iconify-icon 
              icon={metric.icon} 
            />
          </div>
          
          <p class="text-lg md:tex-xl font-bold text-main">
            {metric.value}
          </p>
          
          <p class="mt-2 text-base md:tex-lg text-blackmain">
            {metric.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
