---
import BlogTextBlock from './BlogTextBlock.astro';
const { post } = Astro.props;
const blocks = post.fields.contentBlocks || [];
---

<article class="max-w-3xl mx-auto p-6">
  <h3 class="text-3xl font-normal mb-2">{post.fields.title}</h3>
  <p class="text-sm text-gray-500 mb-6">{post.fields.publishDate}</p>

  {blocks.map(block => (
    <BlogTextBlock block={block} />
  ))}
</article>
