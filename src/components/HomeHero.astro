---
// HomeHero.astro
import BannerHome from '../components/BannerHome.astro';
---

<section class="relative w-full h-svh overflow-hidden">
  <!-- Hamburger (no extra wrapper needed) -->
<BannerHome class="absolute top-0 left-0 w-full z-50" />


  <!-- Background Video -->
<img
    class="absolute inset-0 w-full h-full object-cover z-0"
    src="/img/banner/gc_cityscape.png"
    alt="Background Cityscape Image"
/>

  <!-- Centered Logo -->
+  <div class="absolute inset-0 z-30 flex items-center justify-center">
+    <img
+      src="/img/logo/garthcapital_white.png"
+      alt="Garth Capital Logo"
+      class="w-[280px] sm:w-[350px] max-w-[60vw] h-auto"  
+    />
   </div>
   
   <!-- BETA text for prev instance -->
   <div class="absolute inset-0 z-30 flex items-center justify-center text-white text-8xl">
    <h2> </h2>
   </div>
   

  <!-- Optional dark overlay -->
    <div class="absolute inset-0 bg-black/40 z-20"></div>  <!-- Tailwind has z-10, z-20, etc. -->
 </section>

