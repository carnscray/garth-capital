---
import Layout from "../layouts/Layout.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
import Banner from '../components/Banner.astro';
import HomeInfo1 from '~/components/HomeInfo-1.astro';
import HomeTestimonials from '~/components/HomeTestimonials.astro';


// SEO Values //
const pageTitle = "Book | Know Brainer Trivia";
const pageDescription = "Ready to impress your guests? Explore our packages and testimonial and book a Know Brainer Trivia night. We deliver a professional and unforgettable experience.";

---

<Layout title={pageTitle} description={pageDescription}>
  <Banner />



<section class="w-full py-4 px-4">
  <div class="max-w-6xl mx-auto text-center">
    <h1 class="text-8xl font-normal mb-4 text-main">Book Us.</h1>

  </div>
</section>


<!-- HERO PANEL — full-bleed, no rounded corners -->
<section class="mt-0 lg:mb-12 mb-4">
  <div class="w-full">
    <div
      class="grid grid-cols-1 lg:grid-cols-2 w-full
             lg:h-[55vh] lg:max-h-[480px]"
    >
      <!-- Left: Image -->
      <div class="w-full h-64 lg:h-full lg:max-h-[480px]">
        <img
          src="/img/hero/hero-crowd2.jpg"
          alt=""
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>

      <!-- Right: Text -->
      <div class="w-full lg:h-full bg-stone pt-4 py-8 px-8 pr-12 lg:pr-16 flex flex-col justify-center text-left">
        <h2 class="text-4xl lg:text-6xl text-charcoal">Trivia That Connects.</h2>
        <p class="text-sm lg:text-lg text-cardsub mt-2 mb-4 font-light">
          Smart, social, and seriously fun — we bring people together for nights to remember.
        </p>

        <a
          href="#contactus"
          class="inline-block max-w-[150px] hover:bg-daccent bg-second text-white text-base font-semibold px-6 py-2 rounded-xl text-center mt-2"
          onclick="document.querySelector('#contactus').scrollIntoView({behavior: 'smooth'})"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>
</section>



<div class="h-12 bg-white"></div>




<section class="bg-second text-white pt-8 pb-16 rounded-4xl mx-4 lg:mx-12">
  <div class="max-w-[1000px] mx-auto px-4 text-center">
    <h2 class="text-6xl md:text-7xl font-bold mb-4">Check Us Out.</h2>
    <div class="border-2 border-white rounded-2xl overflow-hidden">
      <iframe
        class="w-full aspect-video"
        src="https://www.youtube.com/embed/3xMGkPAcU90"
        title="YouTube video player"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
      ></iframe>
    </div>
  </div>
</section>



  <!-- Info Secion -->
  <HomeTestimonials />

      <!-- White gap  -->
  <div class="h-12 bg-white"></div>

  <!-- Info Secion -->
  <HomeInfo1 />




<h2 class="text-8xl lg:text-8xl font-bold mt-16 mb-0 text-main text-center">Trivia Format.</h2>
<section class="w-full pt-8 pb-8 px-4 bg-white">
  <div class="max-w-4xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-4 justify-start">
    
    <!-- REGULAR EVENTS -->
    <div class="flex flex-col bg-stone rounded-2xl overflow-hidden shadow-md hover:shadow-2xl transition w-full text-left">
      <img
        src="/img/circle/circle05.jpg"
        alt="Regular Events"
        class="w-full aspect-square object-cover"
      />
      <div class="flex flex-col justify-between h-full p-6">
        <div>
          <h2 class="text-5xl font-bold text-charcoal mb-2">Regular.</h2>
          <p class="text-base text-gray-700 mb-4 font-light">
            Weekly, fortnightly or monthly trivia to turn those mundane nights into memorable ones - bring energy, engagement, and foot traffic to your venue.
          </p>
        </div>
        <a 
          href="/docs/Know Brainer Trivia - Recurring Events.pdf"
          target="_blank"
          rel="noopener"
          class="inline-block max-w-[150px] hover:bg-daccent bg-second text-white text-base font-semibold px-6 py-2 rounded-xl text-center mt-2"
        >
          Download
        </a>
      </div>
    </div>

    <!-- SPECIAL EVENTS -->
    <div class="flex flex-col bg-stone rounded-2xl overflow-hidden shadow-md hover:shadow-2xl transition w-full text-left">
      <img
        src="/img/circle/circle03.jpg"
        alt="Special Events"
        class="w-full aspect-square object-cover"
      />
      <div class="flex flex-col justify-between h-full p-6">
        <div>
          <h2 class="text-5xl font-bold text-charcoal mb-2">One-Off.</h2>
          <p class="text-base text-gray-700 mb-4 font-light">
            Whether it’s a social day, a fundraiser, a party, or a tournament, we make sure your event is fun, seamless, and unforgettable.
          </p>
        </div>
        <a 
          href="/docs/Know Brainer Trivia - Special Events.pdf"
          target="_blank"
          rel="noopener"
          class="inline-block max-w-[150px] hover:bg-daccent bg-second text-white text-base font-semibold px-6 py-2 rounded-xl text-center mt-2"
        >
          Download
        </a>
      </div>
    </div>

  </div>
</section>








  <!-- Contact Form -->

  <section id="contactus"">
    <Contact />
  </section>

</Layout>
